<body>
  <table style="max-width: 600px; margin: 0 auto; padding: 20px;">
    <tr>
      <td style="text-align: center; padding-bottom: 20px;">
        <h2><%= t '.subject' %></h2>
      </td>
    </tr>
    <tr>
      <td>
        <p><%= t(:hello).capitalize %> <%= @email %>,</p>
        <p><%= t '.thanks_signup_msg' %> </p>
        <p><%= t '.confirm_link_msg' %></p>
        <p style="text-align: center;">
          <%= link_to t('.confirm_account_link'),
            confirmation_url(@resource,
            {confirmation_token: @token,
            config: message['client-config'].to_s,
            redirect_url: message['redirect-url']}),
            style: "display: inline-block; padding: 10px 20px;
                    background-color: #007bff; color: #fff;
                    text-decoration: none; border-radius: 4px;"
          %>
        </p>
        <p><%= t '.ignore_mail_msg' %></p>
        <p><%= t(:thanks).capitalize %>,<br>Aio</p>
      </td>
    </tr>
  </table>
</body>
